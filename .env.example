# ===========================================
# CMC Health - Production Environment
# ===========================================
# Copy this file to .env and update the values

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=cmc_health
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://redis:6379

# ===========================================
# Application Settings
# ===========================================
ENV=production
LOG_LEVEL=info
SECRET_KEY=your_very_long_and_secure_secret_key_here_min_32_chars

# ===========================================
# API Ports
# ===========================================
BACKEND_PORT=8000
FRONTEND_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# ===========================================
# AI Model Configuration
# ===========================================
# Local Ollama (if running on host)
OLLAMA_HOST=http://host.docker.internal:11434

# Optional: External AI Services (leave empty if not using)
OPENAI_API_KEY=
GOOGLE_API_KEY=

# ===========================================
# Frontend Configuration
# ===========================================
# For production, set to your domain
VITE_API_URL=http://localhost:8000

# ===========================================
# MQTT Configuration
# ===========================================
MQTT_PORT=1883
MQTT_WS_PORT=9001

# ===========================================
# Domain Configuration (for SSL/nginx)
# ===========================================
DOMAIN=localhost
SSL_EMAIL=admin@example.com
